  $month = date('m', $timenow);
  //$chart_title = t('Tháng', array(), 'vi');

  for ($month1 = 1; $month1 <= $month; $month1++) {
    $year2 = $year1;
    $month2 = $month1 + 1;

    if ($month2 > 12) {
      $month2 = 1;
      $year2 = $year2 + 1;
    }

    $date_from = mktime(0, 0, 0, $month1, 1, $year1);
    $date_to = mktime(0, 0, 0, $month2, 1, $year2);
