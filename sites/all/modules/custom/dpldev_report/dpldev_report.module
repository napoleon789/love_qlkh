  $chitiet ='<div id="readmore">Detail</div><div id="content_render"></div>';
 // $m = arg(1);

  //if(isset($m))
    //$chitiet = dpldev_report_khohang_chart_column_chi_tiet($area);

  return $output.$chitiet;
}

